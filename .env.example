# EAS Build Secrets
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# API Configuration
EXPO_PUBLIC_API_URL=https://api.codeword.app
EXPO_PUBLIC_WS_URL=wss://api.codeword.app/ws/chat

# LLM Service Keys (Server-side only, not exposed to client)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Push Notification Configuration
EXPO_PUBLIC_PUSH_SERVER_URL=https://push.codeword.app

# Apple Push Notification Service
APN_KEY_ID=your_apn_key_id
APN_TEAM_ID=your_apple_team_id
APN_KEY=your_apn_key_p8_contents

# Analytics
EXPO_PUBLIC_ANALYTICS_ENDPOINT=https://analytics.codeword.app
ANALYTICS_API_KEY=your_analytics_key

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=codeword-mobile

# Environment
NODE_ENV=development
EXPO_PUBLIC_ENV=development